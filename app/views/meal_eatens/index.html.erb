<h2>Your Food Log</h2>

<% @meal_eatens.each do |meal| %>

<div class="card-container">
  <div class="card">
        <div class="card-heading">
          <h2 class="heading"><%= meal.meal.name %></h2>
          <p class="information" ><b>Total Carbs:</b> <%= meal.meal.total_carbs %></p>
          <p class="information" ><b>Total Protein:</b> <%= meal.meal.total_proteins %></p>
          <p class="information" ><b>Total Fats:</b> <%= meal.meal.total_fats %></p>
          <p class="information" ><b>Total Calories:</b> <%= meal.meal.total_calories %></p>
        </div>
    </div>
</div>
<% end %>

<p><%= link_to "Log a new food", new_meal_eaten_path  %></p>

<%= link_to root_path, class: "btn-back" do %>
<i class="fas fa-arrow-left"></i>
<% end %>
