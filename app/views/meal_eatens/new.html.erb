<div class="back-button-container">
<%= link_to meal_eatens_path, class: "btn-back" do %>
  <i class="far fa-arrow-alt-circle-left"></i>
<% end %>
</div>

<div class="me-new-heading">
  <h2>Log a New Meal</h2>
</div>

<div class="container new_meal_session">
  <%= simple_form_for(@meal_eaten) do |f| %>
    <%= f.association :meal, collection: current_user.meals, prompt: 'Select a meal'%>
    <%= f.input :meal_type, prompt: "What type of meal is this?" %>
    <%= f.input :date %>
    <%= f.submit value: 'Add this meal!', class:'btn btn-primary' %>
  <% end %>
</div>

<div class="me-new-heading">
  <h2>Log a New Food</h2>
</div>

<div class="container new_meal_session">
  <%= simple_form_for(@meal) do |f| %>
    <%= f.input :name %>
    <%= f.submit value: 'Name this meal', class:'btn btn-primary' %>
  <% end %>
</div>
