<div class="back-button-container">
<%= link_to root_path, class: "btn-back" do %>
  <i class="far fa-arrow-alt-circle-left"></i>
<% end %>
</div>

<div class="chatrooms-container">
  <div class="chat-container">
    <h3 class='chat-heading'>Chats</h3>
    <%= render "shared/chats", chatrooms: @chatrooms %>
  </div>

  <div class="other-container">
    <h5 class='other-chat-title'>Other members</h5>
    <%= render "shared/users", users: @other_users %>
  </div>
</div>
