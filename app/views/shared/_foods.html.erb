<% foods.each do |food|  %>
  <div class="card-container">
    <div class="card">
      <div>
          <div class="card-heading">
              <p><%= "Name: #{food.name}" %></p>
              <p><%= "Carbs: #{food.carbs}" %></p>
              <p><%= "Proteins: #{food.protein}" %></p>
              <p><%= "Fats: #{food.fats}" %></p>
              <p><%= "Calories: #{food.calories}" %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <p><%= link_to "Delete this food", food_path(food), method: :delete %></p>
<% end %>
